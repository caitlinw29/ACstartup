{{#each bugs as |bug| }}
  <div class="card text-center">
    <div class="card-header">
      <img class="creature-img" src="{{bug.icon}}" alt="{{bug.name}}"/>
      <h2> {{bug.name}} </h2>   
    </div>
  
    <div class="card-contents">
      <p> Sell price: {{bug.sellPriceString}} bells </p>
      <p> Flick price: {{bug.flickPriceString}} bells </p>
      <p> Available: {{bug.monthN}} </p>
      <p> Months: {{bug.monthArrayN}}</p>
      <p> Time: {{bug.time}} </p>
      <p> Location: {{bug.location}}</p>
      {{greaterThanZeroBug bug.total_catch}}
      <button class="bugDonateBtn donateButton" id="{{bug.id}}" data-name="{{bug.name}}">Donate</button>
    </div>
  </div>
{{/each}}

<script src="./js/bug.js"></script>
