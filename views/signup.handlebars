<!--Form to signup with a new user-->

<div class="login-form text-center">
  <form>
    <h2>Create an account</h2>
    <label for="email-signup">Email</label>
    <input type="email" id="email-signup" name="email" placeholder="sample@gmail.com">

    <label for="password-signup">Password</label>
    <input type="password" id="password-signup" name="password-signup" placeholder="********">

    <label for="password-reenter" class="col-form-label">Re-enter password</label>
    <input type="password" name="password-reenter" id="password-reenter" placeholder="********">

    <button type="submit" class="button" id="signup-button">Sign up!</button>
  </form>
  <p>Have an account? <a href="/login">Log in now!</a></p>
</div>

<script src="./js/signup.js"></script>