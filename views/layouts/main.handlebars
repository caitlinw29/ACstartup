<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ACNH Startup Guide</title>
    <link rel="icon" type="image/x-icon" href="/img/favicon.png">
    <link rel="stylesheet" href="/css/jass.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/flickity.min.css" media="screen">
  </head>

  <body>
    <nav class="nav margin-small">
      <a href="/" class="margin-right"><img src="/img/logo2.png" alt="logo"/></a>

      <ul class="nav-ul">
        {{#if logged_in}}
        <li><a href="/" id="log-out"> Log out</a></li>
          {{else}}
          <li><a href="/login"><ion-icon name="person"></ion-icon> <br/>Login</a></li>
          <li><a href="/signup"><ion-icon name="create"></ion-icon> <br/>Signup</a></li>
          <li><a href="/about"><ion-icon name="information-circle"></ion-icon> <br/>About</a></li>
        {{/if}}
      </ul>

    </nav>

    <main>
      <!-- Render the sub layout -->
      {{{ body }}}
    </main>

    {{#if logged_in}}
    <section id="collectionBtns">
      <div class="dropdown">
        <button class="button dropbtn">Museum</button>
        <div class="dropdown-content">
          <a href="/bug">Bugs</a>
          <a href="/fish">Fish</a>
          <a href="/sea">Sea Creatures</a>
        </div>
      </div>

      <div class="dropdown">
        <button class="button dropbtn">Catalog</button>
        <div class="dropdown-content">
          <a href="/">Furniture</a>
          <a href="/">Songs</a>
          <a href="/">Walls</a>
        </div>
      </div>

       <div class="dropdown">
        <button class="button dropbtn">Villagers</button>
        <div class="dropdown-content">
          <a href="/">Reactions</a>
          <a href="/">Posters</a>
          <a href="/">Photos</a>
        </div>
      </div>

       <div class="dropdown">
        <button class="button dropbtn">DIYS</button>
        <div class="dropdown-content">
          <a href="/">All</a>
          <a href="/">Crafting</a>
          <a href="/">Cooking</a>
        </div>
      </div>

       <div class="dropdown">
        <button class="button dropbtn">Achievements</button>
        <div class="dropdown-content">
          <a href="/">All</a>
          <a href="/">Anytime</a>
          <a href="/">Date-locked/Event</a>
        </div>
      </div>

       <div class="dropdown">
        <button class="button dropbtn">Nature</button>
        <div class="dropdown-content">
          <a href="/">Flowers</a>
          <a href="/">Misc.</a>
          <a href="/">Gyroids</a>
        </div>
      </div>
    </section>
    {{/if}}

    {{#if logged_in}}
    <script src="/js/collectionBtn.js"></script>
    <script src="/js/logout.js"></script>
    {{/if}}
    <!-- Top 2 scripts for icons, third script for gallery -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script src="/js/flickity.pkgd.min.js"></script>
  </body>
</html>
